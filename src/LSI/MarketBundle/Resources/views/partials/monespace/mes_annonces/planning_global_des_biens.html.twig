<table id="mes-reservations-table" class="table table-striped table-bordered" style="width:100%;">
    <thead>
    <tr>
        <th>#</th>
        <th>Titre de l'annonce</th>
        <th>Date d√©but</th>
        <th>Date fin</th>
        <th>Etat</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for index , annonce in annonces %}
        {% set tailleCalendrier = annonce.calendrier | length %}
        <tr>
            <td>{{ index + 1 }}</td>
            <td>{{ annonce.titre }}</td>
            <td>
                <table>
                    {% for calendrier in annonce.calendrier %}
                        <tr><td>{{ calendrier.debut | date("d/m/Y") }}</td></tr>
                    {% endfor %}
                </table>
            </td>
            <td>
                <table>
                    {% for calendrier in annonce.calendrier %}
                        <tr><td>{{ calendrier.fin | date("d/m/Y") }}</td></tr>
                    {% endfor %}
                </table>
            </td>
            <td>
                <table>
                    {% for calendrier in annonce.calendrier %}
                        <tr><td>{{ calendrier.statut.libelle }}</td></tr>
                    {% endfor %}
                </table>
            </td>
            <td><a href="{{ path('ls_imarket_voir_annonce', {'id': annonce.id})}}" class="iconic iconic-visibility"></a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>